<% include partials/header %>
	<div class="row">
		<!-- Show process -->
		<div class="col-md-6">
			<h1>Procesos Abiertos<a id="new-process-sign" class="pull-right" href="#">+</a></h1>
			<ul class="list-group" id="todo-list">
				<% todos.forEach(function(todo){ %>
					<li class="list-group-item">
						<form action="/todos/<%=todo._id%>" method="POST" class="edit-item-form">
							<div class="form-group">
								<label for="<%=todo._id%>">Item Text</label>
								<input type="text" value="<%= todo.name %>" name="todo[name]" class="form-control" id="<%=todo._id%>">
							</div>
							<button class="btn btn-primary">Update Item</button>
						</form>
						<span class="lead">
							<%= todo.name %>
						</span>
						<div class="pull-right">
							<button class="btn btn-sm btn-warning edit-button">Edit</button>
						</div>
						<div class="clearfix"></div>
					</li>
				<% }); %>
			</ul>
		</div><!-- End Show process -->

		<!-- Create new Process -->
		<div class="col-md-6">
			<div id="new-process">
				<h1>Crear Proceso</h1>
				<form action="/todos" method="POST" id="new-process-form">
					<div class="form-group">
						<label for="name">Nombre del proceso</label>
						<input type="text" name="todo[name]" class="form-control" placeholder="Carretillero puerto" id="name">
					</div>
					<div class="form-group">
						<label for="client">Cliente</label>
						<input type="text" name="todo[client]" class="form-control" placeholder="Puerto Maderos BCN" id="client">
					</div>
					<div class="form-group form-inline">
						<label class="mr-sm-2" for="clientType">Tipo</label>
  					<select class="custom-select  mb-2 mr-sm-2 mb-sm-0" name="todo[clientType]" id="clientType">
					    <option selected>Elegir...</option>
					    <option value="1">Oro</option>
					    <option value="2">Plata</option>
					    <option value="3">Bronce</option>
					  </select>
					</div>
					<div class="form-group form-inline">
						<label class="mr-sm-2" for="priority">Prioridad</label>
  					<select class="custom-select  mb-2 mr-sm-2 mb-sm-0" name="todo[priority]" id="priority">
					    <option selected>Elegir...</option>
					    <option value="Alta">Alta</option>
					    <option value="Normal">Normal</option>
					    <option value="Baja">Baja</option>
					  </select>
					</div>
					<div class="form-group form-inline">
						<label for="createAt">Inicio</label>
						<input type="date" name="todo[createAt]" class="form-control" placeholder="13/09/2017" id="createAt">
					</div>
					<div class="form-group form-inline">
						<label for="dateDelivery">Entrega</label>
						<input type="date" name="todo[dateDelivery]" class="form-control" placeholder="28/12/2018" id="dateDelivery">
					</div>
					<div class="form-group">
						<label for="office">Oficina</label>
						<input type="text" name="todo[office]" class="form-control" placeholder="Barcelona" id="office">
					</div>
					<div class="form-group">
						<label for="assignUser">Responsable</label>
						<input type="text" name="todo[assignUser]" class="form-control" placeholder="Fabiola Colotto" id="assignUser">
					</div>
					<button class="btn btn-primary">Crear</button>
				</form>
			</div>
		</div><!-- end create new process -->

		<!-- Edit Process -->
		<div class="col-md-6">
			<div id="edit-process">
			</div>
		</div><!-- end edit process -->

	</div><!-- cierra row -->

<% include partials/footer %>
